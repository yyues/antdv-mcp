{
  "name": "antdv-mcp",
  "version": "1.0.0",
  "private": true,
  "description": "MCP server for Ant Design Vue documentation with indexer CLI",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "pnpm -r test",
    "index:v3": "pnpm --filter @antdv-mcp/indexer index v3",
    "index:v4": "pnpm --filter @antdv-mcp/indexer index v4",
    "index:all": "pnpm --filter @antdv-mcp/indexer index all",
    "mcp:start": "pnpm --filter @antdv-mcp/mcp-server start"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
